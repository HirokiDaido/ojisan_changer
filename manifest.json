{
  "name" : "Ojisan Changer",
  "short_name": "Ojisan",
  "version" : "0.0.1",
  "description" : "プロフィール写真やユーザー写真を見つけておじさんの顔にするExtensionです",
  "background": {
    "page": "html/background.html",
    "persistent": false
  },

  "browser_action": {
    "default_icon": {
      "19": "img/icon19.png"
    },
    "default_title": "Ojisan"
  },
  "icons": {
    "16": "img/icon16.png",
    "19": "img/icon19.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": ["img/icon48.png"],
  "manifest_version": 2
}

